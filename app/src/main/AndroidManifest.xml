<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="huji.postpc.exercises.rachelsorder">

    <application
        android:name=".RachelSandwichApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="adjustResize"
        android:theme="@style/Theme.RachelsOrder">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewOrderActivity" />
        <activity android:name=".InProgressActivity" />
        <activity android:name=".WaitingOrderActivity" />
        <activity android:name=".ReadyOrderActivity" />
    </application>

</manifest>